@model NetPressAssignment.Models.Post

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Post</h4>
    <hr />
    <!-- Post Content -->
    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    @Html.DisplayFor(model => model.Body)
                </div>
            </div>
        </div>
    </article>
    <hr>
 
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.PostID }) |
    @Html.ActionLink("Back to List", "Index")
</p>

@section PostTitle{
    <h1>@Html.DisplayFor(model => model.Title)</h1>
    <hr class="small">
    <h2 class="subheading">@Html.DisplayFor(model => model.Category.Name)</h2>
    <span class="subheading">Posted by @Html.DisplayFor(model => model.AspNetUser.UserName) on @Html.DisplayFor(model => model.LastModified) </span>
}



